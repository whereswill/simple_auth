<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= "Welcome to #{ENV["COMPANY_NAME"]} Website Portal" %></h1>

    <h2>
      This is the home page for the
      <a href="<%= ENV["COMPANY_URL"] %>"><%= ENV["COMPANY_NAME"] %></a>
      guides to do their thang.
    </h2>

    <%= link_to "Log in now!", login_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("Ouzel37YearLogo.png", alt: "Ouzel's 37th Anniversary"),
              'http://oregonrafting.com/' %>
<% end %>
